
@{
    ViewBag.Title = "Play";
}
<script src="~/Scripts/jquery.signalR-2.2.1.min.js"></script>
<script src="~/signalr/hubs"></script>
<script src="~/Scripts/signalr.js"></script>
<!--These hidden fields are used to store ids for signalr-->
<div id="playerid" class="hidden"></div>
<div id="gameid" class="hidden"></div>

<div class="row">
    <div id="gamestate">Waiting to begin</div>
</div>

<div class="row">
    
</div>

<div class="row">
    <div class="col-md-2">Role:</div>
    <div id="rolebox" class="col-md-10"></div>
    <div class="col-md-2">Specialist:</div>
    <div id="specialist" class="col-md-10"></div>
</div>
<div class="form-group">
    <div class="row">
        <label>Party Name</label>
        <div id="partyName" class="col-md-12 hidden"></div>
        <input type="text" id="partynameinput" class="form-control" />
    </div>
</div>

<div class="form-group">
    <div class="row">
        <label>Player Name</label>
        <div id="playerName" class="col-md-12 hidden"></div>
        <input type="text" id="playerNameInput" class="form-control" />
    </div>
</div>
    
<div class="row">
    <input type="button" id="join" value="Join" class="btn btn-default" />

    <input type="button" id="startButton" class="hidden btn btn-success" value="Start Game" />

    <input type="button" id="endButton" class="hidden btn btn-success" value="End Game" />
</div>
<div class="row">
    <div id="takeactionbutton" class="hidden">Take Action</div>
</div>
<div class="row">
    <div id="message" class=""></div>
</div>
<div class="row">
    <div id="otherplayers">

    </div>
</div>
